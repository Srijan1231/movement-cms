{
  "kind": "collectionType",
  "collectionName": "press_releases",
  "info": {
    "singularName": "press",
    "pluralName": "presses",
    "displayName": "Press Release",
    "description": "Press releases and media materials"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "date": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    }
  }
}
