      "type": "text",
      "required": true
    },
    "video_url": {
      "type": "string",
      "required": true
    },
    "thumbnail_url": {
      "type": "string",
      "required": false
    },
    "duration": {
      "type": "string",
      "required": false,
      "maxLength": 10
    },
    "date": {
      "type": "date",
      "required": true
    },
    "location": {
      "type": "string",
      "required": false,
      "maxLength": 255
    },
    "views": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "required": false,
      "default": false
    }
